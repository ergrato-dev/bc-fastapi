{
    // ============================================
    // OPTIMIZACIÓN DE RECURSOS
    // ============================================
    
    // Solo una pestaña activa (preview mode)
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 2,
    "workbench.editor.limit.perEditorGroup": true,
    
    // Cerrar editores no usados
    "workbench.editor.closeEmptyGroups": true,
    "workbench.editor.revealIfOpen": true,
    
    // Reducir uso de memoria
    "files.maxMemoryForLargeFilesMB": 256,
    "search.maxResults": 1000,
    
    // ============================================
    // TEMA VISUAL (Peacock - FastAPI Green)
    // ============================================
    
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#00c9b6",
        "activityBar.background": "#00c9b6",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#ca00df",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#00c9b6",
        "statusBar.background": "#009688",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#00c9b6",
        "statusBarItem.remoteBackground": "#009688",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#009688",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#00968899",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#009688"
}